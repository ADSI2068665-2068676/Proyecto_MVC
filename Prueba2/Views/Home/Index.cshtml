@model IEnumerable<Prueba2.Models.Articulo>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <!--<link rel=StyleSheet href="../src/css/bootstrap.min.css">-->

</head>
<body>
    <h1>Primer cambio Mauro Cano</h1>
    <p>
        @Html.ActionLink("Agregar Artículo", "Create")

        @Html.ActionLink("Buscar Artículo", "Index", "Buscar")
    </p>
    <table class="table table-striped table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Codigo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Precio)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Codigo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        <input id="item.Codigo" type="button" value="Edit" />
                        @Html.ActionLink("Editar", "Edit", new { id = item.Codigo }) |
                        @Html.ActionLink("Detalle", "Details", new { id = item.Codigo }) |
                        @Html.ActionLink("Borrar", "Delete", new { id = item.Codigo })
                    </td>
                </tr>
            }
</table>
</body>
</html>
